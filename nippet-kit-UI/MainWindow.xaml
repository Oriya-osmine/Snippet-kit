<Window x:Class="SnippetUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snippet Manager" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Background="#222" Foreground="White" FontFamily="Segoe UI" Loaded="Window_Loaded" Closed="Window_Closed">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <!-- List and search Area -->
            <ColumnDefinition Width="3*" />
            <!-- Input Area -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- Row for search bar -->
            <RowDefinition Height="45"/>
            <!-- Row for the snippet grid -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Search Box placed above the DataGrid -->
        <Border CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource PrimaryBrush}" 
        Background="Transparent" Grid.Row="0" Margin="0,0,0,5" Grid.Column="0" >
            <Grid Width= "{Binding ActualWidth, ElementName=SnippetGridBorder}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <!-- Icon width -->
                    <ColumnDefinition Width="*"/>
                    <!-- TextBox expands -->
                    <ColumnDefinition Width="10"/>
                    <!-- Extra space -->
                </Grid.ColumnDefinitions>

                <!-- Search Icon using Segoe Fluent Icons -->
                <TextBlock x:Name="SearchIcon"
                   Text="🔍" 
                   Background="Transparent"
                   Foreground="Cyan"
                   FontSize="16"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Column="0"
                   Opacity="1"
                   MouseDown="SearchIcon_MouseDown"/>

                 <!-- Search Box -->
                <TextBox x:Name="SearchBox"
                    Background="Transparent"
                    Foreground="{StaticResource SecondaryBrush}"
                    Height="30"
                    Text="{Binding SearchText, Mode=TwoWay}"
                    TextChanged="SearchBox_TextChanged"
                    IsReadOnly="False" 
                    Focusable="True"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Grid.Column="1"
                    FontSize="20"
                    Padding="5,0,0,0"/>
             </Grid>
        </Border>

        <!-- Left: Snippet List -->
        <Border x:Name="SnippetGridBorder" Grid.Column="0"
                CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource PrimaryBrush}" Background="Transparent" Grid.Row="1">
            
            <DataGrid x:Name="SnippetGrid"
              Grid.Row="1"
              Grid.Column="0"
              SelectionMode="Single"
              SelectionUnit="FullRow"
              Background="Transparent"
              Foreground="{StaticResource SecondaryBrush}"
              HorizontalGridLinesBrush="Transparent"
              VerticalGridLinesBrush="Transparent"
              BorderThickness="0"
              BorderBrush="Transparent"
              AutoGenerateColumns="False"
              ItemsSource="{Binding CodeSnippetsList, Mode=TwoWay}"
              SelectedItem="{Binding SelectedSnippet, Mode=TwoWay}" 
              SelectionChanged="CodeSnippetsList_SelectionChanged"
              HorizontalContentAlignment="Left"
              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              HeadersVisibility="Column"
              IsReadOnly="False"
              CanUserAddRows="False"
              RowDetailsVisibilityMode="VisibleWhenSelected" 
              FontSize="14">
                <!-- MouseDoubleClick="CodeSnippetsList_MouseDoubleClick" -->

                <DataGrid.Resources>
                    <!-- Header Style -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Margin" Value="1,2,1,2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="0"
                                    CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                    </Style>

                    <!-- Row Style -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Margin" Value="1,2,1,2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridRow">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <DataGridCellsPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <!-- Cell Style -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="1,1"/>
                        <Setter Property="Margin" Value="2,0,2,0"/>
                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{StaticResource SecondaryBrush}" 
                                    BorderThickness="0"
                                    CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource SelectedColorBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="Name" Width="*"/>

                    <!-- Delete Button Column -->
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.Header>
                            <Button Content="❌" Click="DeleteAllButton_Click" Padding="5"
                                    Margin="5" Background="Red" Foreground="White"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🗑️" Click="DeleteItemButton_Click"
                        Padding="5" Margin="5" Background="Red" Foreground="White" CommandParameter="{Binding Id}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Save Button Column -->
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.Header>
                            <Button Content="💾" Click="SaveAllButton_Click" Padding="5"
                                    Background="Green" Foreground="White" />
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="💾" Click="SaveItemButton_Click"
                        Padding="5" Margin="5"
                        Background="Green" Foreground="White" CommandParameter="{Binding Id}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Column="1" Margin="20" Grid.RowSpan="2">
            <!-- Snippet Name Input -->
            <TextBlock Text="Snippet Name:" FontSize="16" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SnippetNameBox"
                    Height="35"
                    Background="#444"
                    Foreground="{StaticResource SecondaryBrush}"
                    BorderThickness="0"
                    Padding="5"
                    FontSize="14"
                    Text="{Binding TextSnippet.Id, Mode=TwoWay}"/>
                <Button Content="➕ ADD"
                Click="AddButton_Click"
                Padding="5"
                Margin="5,0,0,0"
                Background="Black"
                Foreground="{StaticResource SecondaryBrush}"
                FontWeight="Bold"
                Grid.Column="1"/>
            </Grid>
                
                <!-- KeyShortcut Input -->
            <TextBlock Text="KeyShortcut:" FontSize="16" Margin="0,10,0,5"/>
            <Grid>
                <TextBox x:Name="KeyShortcutBox"
                 Height="35"
                 Background="#444"
                 Foreground="{StaticResource SecondaryBrush}"
                 BorderThickness="0"
                 Padding="5"
                 FontSize="14"
                 IsReadOnly="True"
                 Text="{Binding TextSnippet.KeyShortcut, Mode=TwoWay}"
                 Grid.Column="0"/>
            </Grid>
            
            <!-- WordShortcut Content -->
            <TextBlock Text="WordShortcut:" FontSize="16" Margin="0,10,0,5"/>
            <TextBox x:Name="WordShortcutBox"
            Height="35"
            Background="#444"
            Foreground="{StaticResource SecondaryBrush}"            
            BorderThickness="0"
            Padding="5"
            FontSize="14"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            Text="{Binding TextSnippet.WordShortcut, Mode=TwoWay}"
            Grid.Column="0"
            TextChanged="WordShortcutBox_TextChanged"/>
       
            <!-- Snippet Content -->
            <TextBlock Text="Snippet Content:" FontSize="16" Margin="0,15,0,5" Grid.Row="0"/>
            <TextBox x:Name="SnippetContentBox"
             Height="200"
             Background="#444"
             Foreground="{StaticResource SecondaryBrush}"
             BorderThickness="0"
             Padding="5"
             FontSize="14"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             Text="{Binding TextSnippet.Code, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</Window>
