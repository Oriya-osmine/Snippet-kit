<Window x:Class="SnippetKitUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Snippet Kit" Height="450" Width="800" Background="#1E1E1E" Foreground="White">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <!-- Snippet list (1/5 of the screen) -->
            <ColumnDefinition Width="4*" />
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- 📜 Snippet List (Left Side) -->
        <ListBox Grid.Column="0" Margin="5"
                 ItemsSource="{Binding Snippets}" 
                 DisplayMemberPath="Title"
                 Background="#252526" Foreground="White"
                 BorderBrush="#3C3C3C" BorderThickness="1"
                 FontSize="14" />

        <!-- 📌 Right Side Panel -->
        <StackPanel Grid.Column="1" Margin="10">

            <!-- ⌨ Key Capture TextBox -->
            <TextBox Name="ShortcutInputBox"
                     Text="Press a key to set a shortcut..."
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Top"
                     Height="30" 
                     FontSize="14"
                     Padding="5"
                     Background="#252526" Foreground="White"
                     BorderBrush="#3C3C3C" BorderThickness="1"
                     IsReadOnly="True"
                     TextAlignment="Center" />

            <Separator Background="#3C3C3C" Margin="5"/>

            <!-- ➕ Add New Shortcut Section -->
            <TextBlock Text="Add New Keyboard Shortcut" FontSize="16" FontWeight="Bold" Margin="5"/>

            <!-- ⌨ Shortcut Key Selection -->
            <TextBlock Text="Select a Keyboard Shortcut:" FontSize="14" Margin="5"/>
            <TextBox Name="NewShortcutBox"
                     Text="Press a key..."
                     Height="30"
                     Padding="5"
                     Background="#252526" Foreground="White"
                     BorderBrush="#3C3C3C" BorderThickness="1"
                     IsReadOnly="True"/>

            <!-- 🎯 Action Type Selection -->
            <TextBlock Text="Select Action Type:" FontSize="14" Margin="5"/>
            <ComboBox Name="ActionTypeComboBox" Height="30"
                      Background="#252526" Foreground="White"
                      BorderBrush="#3C3C3C">
                <ComboBoxItem Content="Paste Text"/>
                <ComboBoxItem Content="Open File"/>
                <ComboBoxItem Content="Run Command"/>
            </ComboBox>

            <!-- 📝 Snippet Content Input -->
            <TextBlock Text="Enter Snippet Content:" FontSize="14" Margin="5"/>
            <TextBox Name="SnippetContentBox"
                     Height="60" 
                     AcceptsReturn="True"
                     Background="#252526" Foreground="White"
                     BorderBrush="#3C3C3C"
                     Padding="5"/>

            <!-- 🔘 Save Button -->
            <Button Content="Save Shortcut" 
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Margin="5"
                    Cursor="Hand"
                    BorderThickness="0"
                    Padding="5"
                    HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="5"
                                            Cursor="Hand">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
