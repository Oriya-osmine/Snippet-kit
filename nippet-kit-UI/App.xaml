<Application x:Class="nippet_kit_UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:nippet_kit_UI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <!--Brush Colors-->
        <Color x:Key="PrimaryColor">#FF171717</Color>
        <Color x:Key="SecondaryColor">MediumPurple</Color>
        <Color x:Key="ContainerColor">DarkSlateBlue</Color>
        <Color x:Key="SelectedColor">black</Color>
        <Color x:Key="DeleteIconColor">DarkRed</Color>
        <Color x:Key="SaveIconColor">DarkGreen</Color>

        <SolidColorBrush x:Key="DeleteIconBrush" Color="DarkRed" />
        <SolidColorBrush x:Key="SaveIconBrush" Color="DarkGreen" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF171717" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="MediumPurple" />
        <SolidColorBrush x:Key="ContainerBrush" Color="DarkSlateBlue" />
        <SolidColorBrush x:Key="SelectedColorBrush" Color="black" />

    </Application.Resources>
</Application>
